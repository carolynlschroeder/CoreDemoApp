@model List<CoreDemoApp.Models.CartItemModel>
@{
    ViewBag.Title = "View Cart";
}

<h2>@ViewData["Title"]</h2>

@if (Model.Count > 0)
{
    <table class="table">
        <tr>
            <th>AlbumId</th>
            <th>Quantity</th>
        </tr>
        @foreach (var cartItem in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(c => cartItem.AlbumId)
                </td>
                <td>@Html.DisplayFor(c => cartItem.Quantity)</td>
            </tr>
        }
    </table>
}
else
{
    <p>
        No items in your cart
    </p>
}